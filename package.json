{
  "name": "@gimke/lemon",
  "version": "1.0.2",
  "description": "lemon ui",
  "license": "MPL-2.0",
  "main": "lib/index.js",
  "module": "esm/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/gimke/lemon.git"
  },
  "scripts": {
    "clean:commonjs": "rimraf lib",
    "clean:umd": "rimraf dist",
    "clean:esm": "rimraf esm",
    "watch": "cross-env NODE_ENV=development webpack --config webpack.config.js -w",
    "build:commonjs": "babel src/ --out-dir lib/ --plugins @babel/plugin-transform-modules-commonjs --copy-files --ignore **/__tests__,**/__mocks__",
    "build:esm": "babel src/ --out-dir esm/ --copy-files --ignore **/__tests__,**/__mocks__",
    "build": "npm-run-all clean:* --parallel build:*"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.0",
    "@babel/core": "^7.2.0",
    "@babel/plugin-proposal-class-properties": "^7.2.1",
    "@babel/plugin-transform-modules-commonjs": "^7.2.0",
    "@babel/preset-env": "^7.2.0",
    "@babel/preset-react": "^7.0.0",
    "babel-loader": "^8.0.4",
    "babel-plugin-import": "^1.11.0",
    "cross-env": "^5.2.0",
    "css-loader": "^1.0.0",
    "html-webpack-plugin": "^3.2.0",
    "mini-css-extract-plugin": "^0.4.4",
    "npm-run-all": "^4.1.5",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "postcss-loader": "^3.0.0",
    "postcss-preset-env": "^6.1.2",
    "promise-polyfill": "^8.1.0",
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "rimraf": "^2.6.2",
    "uglifyjs-webpack-plugin": "^2.0.1",
    "webpack": "^4.28.0",
    "webpack-cli": "^3.1.2"
  },
  "peerDependencies": {
    "react": ">=16.0.0",
    "react-dom": ">=16.0.0"
  }
}
