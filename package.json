{
  "name": "lemon-ui",
  "version": "1.2.5",
  "description": "lemon ui",
  "license": "MPL-2.0",
  "main": "lib/index.js",
  "module": "es/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/gimke/lemon-ui.git"
  },
  "scripts": {
    "clean:commonjs": "rimraf lib",
    "clean:umd": "rimraf dist",
    "clean:es": "rimraf es",
    "watch": "cross-env NODE_ENV=development webpack --config webpack.config.js -w",
    "build:product": "cross-env NODE_ENV=production webpack --config webpack.config.js --hide-modules --progress",
    "build:commonjs": "babel src/ --out-dir lib/ --plugins @babel/plugin-transform-modules-commonjs --copy-files --ignore **/__tests__,**/__mocks__",
    "build:es": "babel src/ --out-dir es/ --copy-files --ignore **/__tests__,**/__mocks__",
    "build": "npm-run-all clean:* --parallel build:*",
    "publish": "npm version patch && npm run build && npm publish"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.0",
    "@babel/core": "^7.2.0",
    "@babel/plugin-proposal-class-properties": "^7.2.1",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/plugin-transform-modules-commonjs": "^7.2.0",
    "@babel/preset-env": "^7.2.0",
    "@babel/preset-react": "^7.0.0",
    "async-validator": "^1.10.1",
    "babel-loader": "^8.0.4",
    "babel-plugin-import": "^1.11.0",
    "cross-env": "^5.2.0",
    "css-loader": "^1.0.0",
    "cssnano": "^4.1.7",
    "html-webpack-plugin": "^3.2.0",
    "less": "^3.8.1",
    "less-loader": "^4.1.0",
    "mini-css-extract-plugin": "^0.4.4",
    "npm-run-all": "^4.1.5",
    "nprogress": "^0.2.0",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "postcss-color-function": "^4.0.1",
    "postcss-custom-properties": "^8.0.9",
    "postcss-import": "^12.0.1",
    "postcss-loader": "^3.0.0",
    "postcss-preset-env": "^6.1.2",
    "promise-polyfill": "^8.1.0",
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "react-loadable": "^5.5.0",
    "react-markdown": "^4.0.6",
    "react-redux": "^5.0.7",
    "react-router": "^4.3.1",
    "react-router-dom": "^4.3.1",
    "redux": "^4.0.1",
    "redux-thunk": "^2.3.0",
    "rimraf": "^2.6.2",
    "style-loader": "^0.23.1",
    "uglifyjs-webpack-plugin": "^2.0.1",
    "webpack": "^4.28.0",
    "webpack-cli": "^3.1.2",
    "whatwg-fetch": "^3.0.0"
  },
  "peerDependencies": {
    "react": ">=16.0.0",
    "react-dom": ">=16.0.0"
  }
}
